{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "job_owner": {
            "type": "string",
            "pattern": "^[^0-9]*$",
            "minLength": 2,
            "maxLength": 100
        },
        "creation_date": {
            "type": "string",
            "format": "date",
            "pattern": "^[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])$"
        },
        "job_type": {
            "type": "string",
            "enum": ["UNIQUE", "MULTIPLE", "PIPELINE"]
        },
        "target_cloud_run": {
            "type": "string"
        },
        "variables": {
            "type": "object"
        },
        "parallel_param": {
            "type": "string"
        },
        "parallel_min": {
            "type": "number"
        },
        "parallel_max": {
            "type": "number"
        },
        "parallel_increment": {
            "type": "number"
        },
        "parallel_type": {
            "type": "string",
            "enum": ["NUMERIC", "LIST", "DATE"]
        },
        "parallel_list": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 2
        },
        "steps": {
            "type": "array",
            "items": {
                "type": "object"
            },
            "minItems": 1
        }
        
    },
    "allOf": [
        {
          "if": {
            "properties": {
              "parallel_type": { "const": "NUMERIC" }
            },
            "required": ["parallel_type"]
          },
          "then": {
            "required": ["parallel_increment", "parallel_max", "parallel_min", "parallel_param"]
          }
        },
        {
            "if": {
              "properties": {
                "parallel_type": { "const": "LIST" }
              },
              "required": ["parallel_type"]
            },
            "then": {
              "required": ["parallel_list"]
            }
          }
      ],
    "required": ["job_owner", "creation_date", "job_type", "target_cloud_run"],
    "additionalProperties": false
}
